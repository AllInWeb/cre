/**
 * Авто-генерация пароля
 * @return string
 */
function autoGeneratePassword()
{
    $letters = array('A', 'B', 'c', 'g', 'zii', 'cr', 'V', 'I');
    $limit = count($letters) - 1;
    $placeholder = $letters[mt_rand(0, $limit)];

    return 'Rx' . mt_rand(1, 1000) . 'DBn' . mt_rand(1, 800) . '' . $placeholder;
}

